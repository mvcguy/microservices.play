@model ProductCategoriesVm

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <table class="table table-striped">
        <caption style="caption-side:top!important">Please select a category</caption>
        <thead>
            <tr>
                <td colspan="2">
                    <div style="float:right">
                        <div>
                            <div style="float:left"><a href="~/?page=@(Model.PageNumber - 1 < 1 ? 1 : Model.PageNumber - 1)">&lt;&lt; Prev</a></div>
                            <div style="float:left">&nbsp;&nbsp; @(Model.PageNumber)&nbsp;/@(Model.TotalPages) &nbsp;&nbsp;</div>
                            <div style="float:left"><a href="~/?page=@(Math.Min(Model.PageNumber + 1, Model.TotalPages))">Next &gt;&gt</a></div>
                        </div>
                    </div>

                </td>

            </tr>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductCategories)
            {
                <tr>
                    <td>
                        <a href="~/home/products?categoryId=@item.Id" >@item.Name</a>
                    </td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>

</div>
