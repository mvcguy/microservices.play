@model ProductVm

@{
    ViewData["Title"] = "Products";
}

<div>
    <table class="table table-striped">
        <caption style="caption-side:top!important">Please select a Product</caption>
        <thead>
            <tr>
                <td colspan="2">
                    <div style="float:right">
                        <div>
                            <div style="float:left"><a href="~/home/products?categoryId=@Model.CategoryId&page=@(Model.PageNumber - 1 < 1 ? 1 : Model.PageNumber - 1)">&lt;&lt; Prev</a></div>
                            <div style="float:left">&nbsp;&nbsp; @(Model.PageNumber)&nbsp;/@(Model.TotalPages) &nbsp;&nbsp;</div>
                            <div style="float:left"><a href="~/home/products?categoryId=@Model.CategoryId&page=@(Math.Min(Model.PageNumber + 1, Model.TotalPages))">Next &gt;&gt</a></div>
                        </div>
                    </div>

                </td>

            </tr>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Currency</th>
                <th>Category Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Currency</td>
                    <td>@item.CategoryId</td>
                </tr>
            }
        </tbody>
    </table>

</div>
